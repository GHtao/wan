<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorCard"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">
        <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/adapter_project_list_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dp_80"
            android:layout_height="0dp"/>
        <TextView
            android:textColor="@color/comment_text"
            android:layout_marginStart="@dimen/dp_10"
            android:lines="1"
            android:drawablePadding="@dimen/dp_16"
            android:text=" Javaèˆ¬wan android"
            android:drawableStart="@mipmap/icon_author"
            android:id="@+id/adapter_project_list_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapter_project_list_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/comment_text"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintBottom_toTopOf="@+id/adapter_project_list_time"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/adapter_project_list_content"
            app:layout_constraintTop_toBottomOf="@+id/adapter_project_list_title"
            app:layout_constraintStart_toEndOf="@+id/adapter_project_list_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:text="2020-06-28 09:43"
            android:id="@+id/adapter_project_list_time"
            app:layout_constraintStart_toEndOf="@+id/adapter_project_list_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/comment_text"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_16"
            android:text="fmtjava"
            android:id="@+id/adapter_project_list_name"
            app:layout_constraintStart_toEndOf="@+id/adapter_project_list_time"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>