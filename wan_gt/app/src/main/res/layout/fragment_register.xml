<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bac"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        layout="@layout/item_tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/common_tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/register_et_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:inputType="textPassword"
        android:hint="输入密码"
        android:textColorHint="@color/light_white"
        android:layout_marginBottom="@dimen/dp_36"
        android:padding="@dimen/dp_12"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/register_et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/register_et_re_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:inputType="textPassword"
        android:hint="确认密码"
        android:textColorHint="@color/light_white"
        android:layout_marginBottom="@dimen/dp_36"
        android:padding="@dimen/dp_12"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/register_et_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="@dimen/dp_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="邮箱/手机号"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/light_white"
        android:layout_marginBottom="@dimen/dp_36"
        app:layout_constraintBottom_toTopOf="@+id/register_et_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_et_re_password"
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/bg_conner_green"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_21"
        android:layout_marginTop="@dimen/dp_60"/>

</androidx.constraintlayout.widget.ConstraintLayout>